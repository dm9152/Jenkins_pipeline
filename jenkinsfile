pipeline {
    
    agent {
        docker {
            image 'node:slim'
        }
    }

    stages {


        stage('Build') {
            options {
                timestamps()
            }
            steps {
                echo "Build en cours avec timestamps..."
                sh 'npm -v'
            }
        }


        stage('Tests') {
            steps {
                echo 'Running tests...'
            }
        }


        stage('deployment'){
            steps{
                echo 'Deployment complete!'
            }
        }


    }


    post {
        always {
            echo "This will always run"
        }
        success {
            echo "This will run only if the pipeline is successful"
        }
        failure {
            echo "This will run only if the pipeline fails"
        }
    }

}