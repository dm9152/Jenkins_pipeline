pipeline{
    agent any

    environment{
        MY_VAR = 'My first variable'
        MY_NUMBER = 42
    }

    stages{

        stage('build'){
            steps {
                sh 'npm -v'
            }
        }

        stage('tests'){
            steps {
                echo 'Running tests...'
            }
        }

        stage('deployment'){
            steps{
                echo 'Deployment complete!'
            }
        }

    }
}