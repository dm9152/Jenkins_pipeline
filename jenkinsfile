pipeline{

    agent any 

    options {
        timestamps()
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }

    stages {

        stage('BUILD'){
            steps{
                echo "Build in progress..."
            }
        }

        stage('TEST'){
            
            failfast true
            
            parallel{

                stage('FIRST TEST'){
                    steps{
                        echo "Running first test..."
                    }
                }

                stage('SECOND TEST'){
                    steps{
                        echo "Running second test..."
                    }
                }
            }
             
        }

        stage('DEPLOYMENT'){
             steps{
                echo "Deployment in progress..."
             }
        }

    }
}