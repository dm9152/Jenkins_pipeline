    stages {
        stage('build') {
            steps {
                echo "construire sur la plate-forme : ${PLATFORM}"
            }
        }
        stage('test') {
            steps {
                echo "tester sur la plate-forme : ${PLATFORM}"
            }
        }
        stage('deploy') {
            steps {
                echo "d√©ployer sur la plate-forme : ${PLATFORM}"
            }
        }
    }
    }

}