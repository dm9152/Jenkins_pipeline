pipeline{
    agent any

    stages{

        stage('build'){
            steps {
                echo "Building application..."
                echo "BRANCH NAME ${env.BRANCH_NAME}"
                echo "BRANCH_IS_PRIMARY ${env.BRANCH_IS_PRIMARY}"
                echo "CI ${env.CI}"
                echo "BUILD_NUMBER ${env.BUILD_NUMBER}"
                echo "JENKINS_URL ${env.JENKINS_URL}"
            }
        }

        stage('tests'){
            steps {
                echo 'Running tests...'
            }
        }

        stage('deployment'){
            steps{
                echo 'Deployment complete!'
            }
        }

    }
}