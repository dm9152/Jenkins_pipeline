pipeline{
    agent {
        docker{
            image 'node:slim'
        }
    }

    environment{
        MY_VAR = 'My first variable'
        MY_NUMBER = 42
    }

    stages{

        stage('build'){
            steps {
                sh 'npm -v'
            }
        }

        stage('tests'){
            steps {
                echo 'Running tests...'
            }
        }

        stage('deployment'){
            steps{
                echo 'Deployment complete!'
            }
        }
    }

    post {
        always {
            echo "This will always run"
        }
        success {
            echo "This will run only if the pipeline is successful"
        }
        failure {
            echo "This will run only if the pipeline fails"
        }
    }
}